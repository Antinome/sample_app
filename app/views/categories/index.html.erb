<h1>Listing categories</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Integer,</th>
    <th>Name</th>
    <th>String,</th>
    <th>Parent</th>
    <th>Integer,</th>
    <th>Lft</th>
    <th>Integer,</th>
    <th>Rgt</th>
    <th>Integer</th>
    <th></th>
    <th></th>
    <th></th>
